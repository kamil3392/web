<p id="notice"><%= notice %></p>
<h3 >Project:</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
    </tr>
  </thead>
<tbody>
  <tr>
    <td> <%= @project.user %></td>
    <td> <%= @project.title %></td>
    <td><%= @project.description %></td>
    <td><% if current_user && @project.user == current_user %>
        <%= link_to 'Edit', edit_project_path(@project),:class => 'btn btn-mini btn-warning' %> 
        <%= link_to 'Tickets list', "#{@project.id}/tickets",:class => 'btn btn-mini btn-info'%> 
        <% end %></td>
  </tr>
</tbody>
</table>

<h3 >Add New Ticket:</h3>
<br>

<%= form_for([@project, @project.tickets.build]) do |f| %>
  <p >
    <%= f.label :Title %><br>
    (min 5 char)<br>
    <%= f.text_field :title %> 
     
  </p>
  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.label :Priority %><br>
    <%= f.text_area :priority %>
  </p>
  <p>
    <%= f.label :Rank %><br>
    <%= f.text_area :rank %>
  </p>
  <p>
    <%= f.label :Status %><br>
    <%= f.text_area :status %>
  </p>
  <p>
    <% if current_user && @project.user == current_user %>
    <%= f.submit %>
    <% end %>
  </p>
<% end %>

<%= link_to 'Back', projects_path,:class => 'btn btn-mini btn-primary' %> 

