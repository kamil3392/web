<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>
<div class="media">
  <div class="media-body">
<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @projects.each do |project| %>
      <tr >
        <td><%= project.user %></td>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project,:class => 'btn btn-mini btn-info' %></td>
        <td> <% if current_user && project.user == current_user %> <%= link_to 'Edit', edit_project_path(project),:class => 'btn btn-mini btn-warning' %> <% end %> </td>
        <td><% if current_user && project.user == current_user %><%= link_to 'Destroy', project,:class => 'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

<br>
<% if current_user %>
<%= link_to 'New Project', new_project_path,:class => 'btn btn-mini btn-success' %>
<% end %>