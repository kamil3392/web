<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @project.user %>
</p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>
<h2>Add a ticket:</h2>
<%= form_for([@project, @project.tickets.build]) do |f| %>
  <p>
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.label :Priority %><br>
    <%= f.text_area :priority %>
  </p>
  <p>
    <%= f.label :Rank %><br>
    <%= f.text_area :rank %>
  </p>
  <p>
    <%= f.label :Status %><br>
    <%= f.text_area :status %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<h2>Tickets</h2>
<% @project.tickets.each do |ticket| %>
  <p>
  <strong>Title:</strong>
    <%= ticket.title %>
  </p>
 
  <p>
 <strong>Description:</strong>
    <%= ticket.comment %>
  </p>
 <strong>Priority:</strong>
    <%= ticket.priority %>
  </p>
 <strong>Status:</strong>
    <%= ticket.status %>
  </p>
 <strong>Rank:</strong>
    <%= ticket.rank %>
  </p>
<% end %>
<% if current_user && @project.user == current_user %>
<%= link_to 'Edit', edit_project_path(@project) %> |
<% end %>
<%= link_to 'Back', projects_path %> |
<%= link_to 'Tickets list', "#{@project.id}/tickets"%>
