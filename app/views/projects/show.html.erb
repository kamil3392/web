<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @project.user %>
</p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<h2>Add a ticket:</h2>
<%= form_for([@project, @project.tickets.build]) do |f| %>
  <p>
    <%= f.label :Title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.label :Priority %><br>
    <%= f.text_area :priority %>
  </p>
  <p>
    <%= f.label :Rank %><br>
    <%= f.text_area :rank %>
  </p>
  <p>
    <%= f.label :Status %><br>
    <%= f.text_area :status %>
  </p>
  <p>
    <% if current_user && @project.user == current_user %>
    <%= f.submit %>
    <% end %>
  </p>
<% end %>

<% if current_user && @project.user == current_user %>
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Tickets list', "#{@project.id}/tickets"%> |
<% end %>
<%= link_to 'Back', projects_path %> 

