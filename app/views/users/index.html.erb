<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firs_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user ,:class => 'btn btn-mini btn-info'%></td>
        <td><%= link_to 'Edit', edit_user_path(user) ,:class => 'btn btn-mini btn-warning'%></td>
        <td><%= link_to 'Destroy', user,:class => 'btn btn-mini btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path ,:class => 'btn btn-mini btn-success'%>
